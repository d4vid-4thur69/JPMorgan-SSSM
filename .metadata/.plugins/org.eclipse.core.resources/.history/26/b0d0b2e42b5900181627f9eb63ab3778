#include "StockMarket.h"

#include <string>
#include <iostream>
using namespace std;

void DisplayOptions();
void AddTrade(StockMarket* market);

int main()
{
	bool exit = false;
	int option;

	StockMarket* market = new StockMarket();
	market->CreateStockMarketData();

	DisplayOptions();

	while(!exit)
	{
		cin >> option;

		switch(option)
		{
		case 0: exit = true; break;
		case 1: AddTrade(market); break;
		case 2: exit = true; break;
		case 3: exit = true; break;
		case 4: exit = true; break;
		}
	}

	return 0;
}

void DisplayOptions()
{
	cout << "Main Menu\n";
	cout << "Select option\n";
	cout << "0 - exit\n";
	cout << "1 - Add Trade\n";
	cout << "2 - View trades\n";
	cout << "3 - Display Dividend Yield\n";
	cout << "4 - Display P/E Ratio\n";
}

void AddTrade(StockMarket* market)
{
	string symbol;
	cout << "Add Trade Menu\n";
	cout << "Enter Stock Symbol: "; cin >> symbol;

	StockMarket::StockTrade* trade = new StockMarket::StockTrade(symbol, time(&timer), 200, StockMarket::BUY, 80);
	market->RecordTrade("")
}
