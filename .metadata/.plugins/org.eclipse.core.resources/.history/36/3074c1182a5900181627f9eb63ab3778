#include "StockMarket.h"

#include <string>
#include <iostream>
using namespace std;

int main()
{
	bool exit = false;
	int option;

	while(!exit)
	{
		cin >> option;
		cout << "\x1B[2J\x1B[H";

		switch(option)
		{
		case 0: exit = true; break;
		}
	}


	return 0;
}
